{
  "name": "@parischap/test-utils",
  "type": "module",
  "description": "Package containing test utilities",
  "author": "Jérôme MARTIN",
  "license": "MIT",
  "scripts": {
    "test": "vitest run",
    "tscheck": "tsc -b tsconfig.json --force --noEmit",
    "lint": "eslint .",
    "lint-and-analyze": "eslint . --stats -f json > eslint-stats.json",
    "lint-rules": "pnpx @eslint/config-inspector",
    "format": "prettier . --write",
    "rmrf": "node --experimental-transform-types rmrf.ts",
    "mkdirp": "node --experimental-transform-types mkdirp.ts",
    "clean-node-modules": "rm node  node_modules",
    "clean-config-files": "pnpm rmrf tsconfig.json && pnpm rmrf package.json",
    "reinstall-all-dependencies": "pnpm i --force",
    "circular": "madge --extensions ts --circular --no-color --no-spinner esm",
    "clean-prod": "pnpm rmrf dist && pnpm mkdirp dist",
    "checks": "pnpm circular && pnpm lint && pnpm tscheck && pnpm test",
    "build": "pnpm clean-prod && pnpm compile && cd ${prodFolderName} && pnpm i && cd ..",
    "examples": "",
    "generate-index": "node --experimental-transform-types generateIndex.ts run",
    "auto-generate-index": "node --experimental-transform-types generateIndex.ts watch",
    "compile": "tsc -b tsconfig.esm.json --force && babel dist --plugins annotate-pure-calls --out-dir dist --source-maps && pnpm prodify-lib"
  },
  "packageManager": "pnpm@10.23.0",
  "module": "./esm/index.js",
  "exports": {
    ".": {
      "import": "./esm/index.js"
    },
    "./tests": {
      "import": "./esm/index.tests.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parischap/test-utils.git"
  },
  "homepage": "https://github.com/parischap/test-utils",
  "sideEffects": [],
  "private": true,
  "devDependencies": {
    "globals": "16.4.0",
    "eslint": "9.39.1",
    "@eslint/js": "9.39.1",
    "@eslint/json": "0.14.0",
    "@eslint/markdown": "7.5.1",
    "@html-eslint/eslint-plugin": "0.49.0",
    "@html-eslint/parser": "0.49.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-yml": "1.19.0",
    "typescript-eslint": "8.47.0",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.5.0",
    "@tsconfig/strictest": "2.0.8",
    "@effect/language-service": "0.56.0",
    "@types/node": "24.10.1",
    "typescript": "5.9.3",
    "jiti": "2.6.1",
    "vitest": "4.0.7",
    "@parischap/test-utils": "workspace:*",
    "madge": "8.0.0",
    "@effect/experimental": "0.57.4",
    "@effect/platform": "0.93.3",
    "@effect/platform-node": "0.101.1",
    "@effect/cluster": "0.53.4",
    "@effect/rpc": "0.72.2",
    "@effect/sql": "0.48.0",
    "@effect/workflow": "0.13.0",
    "vite": "npm:rolldown-vite@7.2.7",
    "@babel/core": "7.28.5",
    "babel-plugin-annotate-pure-calls": "0.5.0",
    "@babel/plugin-transform-export-namespace-from": "7.27.1",
    "@babel/plugin-transform-modules-commonjs": "7.27.1"
  },
  "peerDependencies": {
    "effect": "3.19.6"
  }
}